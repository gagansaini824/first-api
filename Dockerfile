FROM python:3.6-stretchRUN apt-get update \  && apt-get install -y python3-dev python3-pip \  && rm -rf /var/lib/apt/lists/*RUN pip install --trusted-host pypi.org --trusted-host files.pythonhosted.org Flask  requestsRUN mkdir apiCOPY /api/first-api/* /apiWORKDIR /apiEXPOSE 8000CMD ["python", "first_api.py"]~                                                                                                                  ~                               